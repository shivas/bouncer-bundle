<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="SerendipityHQ\Bundle\AwsSesBouncerBundle\Model\Bounce" table="aws_ses_bouncer_bounces" repository-class="SerendipityHQ\Bundle\AwsSesBouncerBundle\Repository\BounceRepository">

        <id name="emailAddress" type="string" column="email_address" />

        <field name="lastTimeBounce" type="datetime" column="last_time_bounce" />
        <field name="bounceCount" type="integer" column="bounce_count">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="permanent" type="boolean" column="permanent">
            <options>
                <option name="default">0</option>
            </options>
        </field>

    </entity>
</doctrine-mapping>
